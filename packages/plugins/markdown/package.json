{
  "name": "@opensyntaxhq/autodocs-plugin-markdown",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "description": "Markdown guide plugin for Autodocs",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenSyntaxHQ/autodocs.git",
    "directory": "packages/plugins/markdown"
  },
  "bugs": {
    "url": "https://github.com/OpenSyntaxHQ/autodocs/issues"
  },
  "homepage": "https://github.com/OpenSyntaxHQ/autodocs",
  "keywords": [
    "autodocs",
    "plugin",
    "markdown",
    "documentation"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "glob": "^13.0.1",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1"
  },
  "peerDependencies": {
    "@opensyntaxhq/autodocs-core": "^1.0.0"
  },
  "devDependencies": {
    "@opensyntaxhq/autodocs-core": "^1.0.0",
    "@types/node": "^25.2.1",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0"
  }
}
