{
  "name": "@opensyntaxhq/autodocs-core",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "description": "Core parsing and extraction engine for Autodocs",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenSyntaxHQ/autodocs.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/OpenSyntaxHQ/autodocs/issues"
  },
  "homepage": "https://github.com/OpenSyntaxHQ/autodocs",
  "keywords": [
    "documentation",
    "typescript",
    "api-docs",
    "jsdoc",
    "developer-tools"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src/generators/schema/docs.schema.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "typescript": "^5.9.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.0.0"
  }
}
