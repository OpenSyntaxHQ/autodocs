{
  "name": "@opensyntaxhq/autodocs",
  "version": "1.0.0",
  "description": "CLI for Autodocs documentation generator",
  "bin": {
    "autodocs": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/index-exports.ts --format cjs --dts --no-splitting",
    "dev": "tsup src/index.ts --format cjs --watch",
    "lint": "eslint .",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "types": "./dist/index-exports.d.ts",
      "default": "./dist/index-exports.js"
    },
    "./config": {
      "types": "./dist/index-exports.d.ts",
      "default": "./dist/index-exports.js"
    }
  },
  "dependencies": {
    "@opensyntaxhq/autodocs-core": "^1.0.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "express": "^4.18.0",
    "glob": "^10.3.0",
    "inquirer": "^8.2.6",
    "jiti": "^1.21.0",
    "open": "^8.4.2",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.0.0",
    "typescript": "^5.9.0"
  },
  "main": "./dist/index-exports.js",
  "types": "./dist/index-exports.d.ts",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenSyntaxHQ/autodocs.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/OpenSyntaxHQ/autodocs/issues"
  },
  "homepage": "https://github.com/OpenSyntaxHQ/autodocs",
  "keywords": [
    "documentation",
    "typescript",
    "cli",
    "api-docs",
    "jsdoc"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "",
  "license": "Apache-2.0",
  "type": "commonjs"
}
